<header class="index__header">
  <div class="index__header--overlay"></div>
  <div class="col-md-12 index__header--content">
    <h1 class="index__header--title">
      <%= t('pages.index.title') %>
    </h1>
    <p class="index__header--text">
      <%= t('pages.index.text') %>
    </p>
  </div>
</header>
<section class="page">
  <div class="container">
    <div class="row align-items-center index__phone">
      <div class="col-sm-2">
        <i class="fas fa-mobile-alt"></i>
      </div>
      <div class="col-sm-10">
        <span>xxx-xxx-xxxx</span>
      </div>
    </div>
  </div>
  <div class="index__management">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-6  col-lg-4 offset-lg-2">
          <p><%= t('pages.index.content.management') %></p>
        </div>
        <div class="col-md-6 col-lg-6 ">
          <ul>
            <% t('pages.information.list').each do |item| %>
              <li><%= item %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row align-items-center index__about">
      <div class="col-md-4 offset-md-2">
        <img class="index__image" src="https://images.unsplash.com/photo-1531346878377-a5be20888e57?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=934&q=80"/>
      </div>
      <div class="col-md-4">
        <div class="index__content">
          <h6><%= t('pages.index.content.h6') %></h6>
          <h2><%= t('pages.index.content.h2') %></h2>
          <p><%= t('pages.index.content.text') %></p>
        </div>
      </div>
    </div>
  </div>
</section>