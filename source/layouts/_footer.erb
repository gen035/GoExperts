<footer>
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-4 footer__col footer__logo" style="--animation-order:2">
        <%= partial "layouts/logo" %>
      </div>
      <div class="col-md-4 footer__col footer__services" style="--animation-order:1;">
        <ul>
          <% t('nav').each_with_index do |item, index| %>
            <li style="--animation-order:<%= index %>">
              <%= link_to item[:text], i18n_path(item[:link], language: lang) %>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="col-md-4 footer__col footer__contact" style="--animation-order:2">
        <ul>
          <li>
            <a href="mailto:email@email.com">info@goexperts.ca</a>
          </li>
          <li>
            <a href="tel:+4383896600">438-389-6600</a>
          </li>
        </ul>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="footer__copyright">
          <%= t('footer.copyright', year: Date.today.year) %>
        </div>
      </div>
    </div>
  </div>
</footer>
